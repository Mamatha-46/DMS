@model DMS.Models.ResellerDetailsView

@{
    ViewData["Title"] = "AgreementDetails1";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div style="margin-left:260px;margin-top:80px">
    <h1>AgreementDetails</h1>
    <div>
        <div>
            <h4 style="color: blue;">Reseller</h4>
            <a asp-action="Index" style="display:flex; float:right;margin-right:50px">Back</a>
        </div>
        <br />
        <div class="container-fluid">
            <div class="row" style="background-color: white;font-size: 16px;width: 1220px;height:350px;margin-left:1px">
                <div class="col-lg-4">
                    <label>Reseller Name</label>

                    <input asp-for="DistributorName" class="form-control custom-textbox" />
                    <span asp-validation-for="DistributorName" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label>Reseller Type</label>
                    <input asp-for="DistributorType" class="form-control custom-textbox" />

                    <span asp-validation-for="DistributorType" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label>Country</label>

                    <input asp-for="Country" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>Zipcode</label>
                    <input asp-for="Zipcode" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>State/ Region/ Province</label>
                    <input asp-for="State" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>City</label>
                    <input asp-for="City" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>Address1</label>
                    <input asp-for="Address1" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>Address2</label>
                    <input asp-for="Address2" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>Email </label>

                    <input asp-for="Email" class="form-control custom-textbox" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label>Contact Person Name</label>
                    <input asp-for="ContactPersonName" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>Phone / Mobile No</label>
                    <input asp-for="PhoneNo" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>VAT/GST/Tax No.</label>
                    <input asp-for="VAT" class="form-control custom-textbox" />
                </div>
                <div class="col-lg-4">
                    <label>Website</label>

                    <input asp-for="Website" class="form-control custom-textbox" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-4"></div>
                <div class="col-lg-4"></div>
                <div class="col-lg-4"></div>

            </div>
        </div>
    </div>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <div style="background-color:white;width:1220px;margin-top:10px">
        <div class="col-md-4 d-flex justify-content-between py-3 px-1 align-items-center">

        </div>

        <div class="container">
            <form action="/Distributor/Adduserrenewal" method="post">
                @*<form method="POST" enctype="multipart/form-data" id="renewalForm">*@
                    <div class="row mt-5 mb-3">
                        <div class="col-md-12">
                            <h5 class="text-primary mb-3">Agreement details</h5>
                            <input type="hidden" id="UserId" name="UserId" value="@Model.UserId">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="form-group">
                                <label>Agreement Start date</label>
                                <input type="date" class="form-control" id="fDate" onchange="FDate()" placeholder="Reseller From" name="UserFrom" required>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="form-group">
                                <label>Agreement End date</label>
                                <input type="date" class="form-control" id="tDate" onchange="FDate()" onclick="TFDate()" placeholder="Reseller To" name="UserTo" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Terms & Conditions 1</label>
                                <textarea class="form-control textarea" rows="5" placeholder="Terms & Conditions" name="terms" style="width:1200px;height:150px"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Terms & Conditions 2</label>
                                <textarea class="form-control textarea" rows="5" placeholder="Terms & Conditions" name="terms2" style="width:1200px;height:150px"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Discount Terms <sup class="text-danger">*</sup></label>
                                <textarea class="form-control textarea" rows="5" required placeholder="Discount Terms" name="terms3" style="width:1200px;height:150px"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-1" style="margin-top:20px;">
                        <button type="submit" class="btn btn-danger delete-file-btn" id="saveButton">
                            <i class="fa fa-trash"></i> Save
                        </button>
                    </div>

                </form>
        </div>
    </div>
    <div class="container" style="background-color:white;width:1220px">
        <form action="/Distributor/Addproductreseler" method="post">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-append">
                        <br />
                        <div class="col-md-4 d-flex justify-content-between py-3 px-1 align-items-center">
                            <h2 align="left" style="margin-left: 20px">Product Mapped</h2>
                            <center>
                                <button type="button" class="btn btn-primary" id="add-stage-btn">Add Product</button>
                            </center>
                        </div>
                        <div style="margin-top:20px;">


                            <button type="submit" id="ADD" class="btn btn-primary" style="display:flex;float:right">
                                <i class="fa fa-trash"></i>Save
                            </button>
                        </div>
                        <div id="stage-upload-container">
                            <div class="form-group" id="stage-upload-fields" style="display:none;">
                                <div class="container">
                                    <div class="box" style="height: 66px; border-radius: 7px;">
                                        @*<input type="hidden" name="RId" value="@Model.DisID" />*@
                                        <input type="hidden" id="ProsId" name="ProsId" value="@Model.ProsId">
                                        <input type="hidden" id2="ProductId" name="ProductId" value="@Model.ProductId">

                                        <label for="ProductName">Product Name</label>
                                        @Html.DropDownList("product-id", ViewData["product-id"] as SelectList, "Select a Product", new { @class = "form-control custom-width custom-textbox", @id = "product-id" })

                                        @*<input type="text" class="form-control custom-width custom-textbox" name="ProductName">*@

                                    </div>
                                    <div class="box" style="height: 66px; border-radius: 7px;">
                                        <label for="Discount">Discount</label>
                                        <input type="text" class="form-control custom-width custom-textbox" >
                                    </div>
                                    <div class="box" style="height: 66px; border-radius: 7px;">
                                        <label for="EQty">FROM Quantity</label>
                                        <input type="text" id="IDFQty" class="form-control custom-width custom-textbox">
                                    </div>
                                    <div class="box" style="height: 66px; border-radius: 7px;">
                                        <label for="EQty">TO Quantity</label>
                                        <input type="text" id="IDTQty" class="form-control custom-width custom-textbox">
                                    </div>
                                    <div class="box" style="height: 66px; border-radius: 7px;">
                                        <label for="UPrice">Unit Price</label>
                                        <input type="text" id="IDUPrice" class="form-control custom-width custom-textbox">
                                    </div>
                                    <div class="box" style="height: 66px; border-radius: 7px;">
                                        <label for="EDiscount">After Discount</label>
                                        <input type="text" id="IDSTotal" class="form-control custom-width custom-textbox" >
                                    </div>

                                    @*<div class="col-1" style="margin-top:20px;">
                                            <button type="button" id="ADD"  class="btn btn-danger delete-file-btn">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </div>*@

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>





@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



