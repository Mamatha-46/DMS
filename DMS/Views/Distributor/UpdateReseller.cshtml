@model DMS.Models.Distributor

@{
    ViewData["Title"] = "UpdateReseller";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .row {
        display: block;
        margin-right: 20%;
    }

    .container {
        width: 700px;
        height: 500px;
        padding-top: 30px;
        padding-left: 0px;
        padding-right: 15px;
    }

    #st-box {
        float: left;
        width: 250px;
    }

    #rd-box {
        float: right;
        margin-left: 20px;
        width: 250px
    }

    #nd-box {
        float: left;
        margin-left: 20px;
    }
</style>



<h1>UpdateReseller</h1>

<h4>Distributor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateReseller">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DisId" />
            <div class="container">

                <div id="st-box">

                    <label asp-for="DistributorName" class="control-label">Reseller Name </label>
                    <input asp-for="DistributorName" class="form-control" />
                    <span asp-validation-for="DistributorName" class="text-danger"></span>
                </div>
                <div id="nd-box">
                    <label asp-for="DistributorCName" class="control-label" style="text-align: right;">Contact Name</label>
                    <input asp-for="DistributorCName" class="form-control" style="padding: 5px;" />
                    <span asp-validation-for="DistributorCName" class="text-danger"></span>

                </div>
                <div id="rd-box">
                </div>
                <div id="st-box">
                    <label asp-for="DistributorCountry" class="control-label"></label>
                    <input asp-for="DistributorCountry" class="form-control" />
                    <span asp-validation-for="DistributorCountry" class="text-danger"></span>
                </div>
                <div id="nd-box">
                    <label asp-for="DistributorState" class="control-label" style="text-align: right;">State/ Region /Province</label>
                    <input asp-for="DistributorState" class="form-control" />
                    <span asp-validation-for="DistributorState" class="text-danger"></span>
                </div>
                <div id="rd-box">
                </div>
                <div id="st-box">

                    <label asp-for="DistributorCity" class="control-label" style="text-align: right;">City</label>
                    <input asp-for="DistributorCity" class="form-control" />
                    <span asp-validation-for="DistributorCity" class="text-danger"></span>
                </div>
                <div id="nd-box">
                    <label asp-for="DistributorZip" class="control-label" style="text-align: right;">Zipcode</label>
                    <input asp-for="DistributorZip" class="form-control" style="padding: 5px;" />
                    <span asp-validation-for="DistributorZip" class="text-danger"></span>
                </div>
                <div id="rd-box">
                </div>
                <div id="st-box">

                    <label asp-for="DistributorAddress1" class="control-label" style="text-align: right;">Address 1</label>
                    <textarea asp-for="DistributorAddress1" class="form-control"></textarea>
                    <span asp-validation-for="DistributorAddress1" class="text-danger"></span>
                </div>
                @*<div id="nd-box">
                    <label asp-for="DistributorAddress2" class="control-label" style="text-align: right;">Address 1</label>
                    <textarea asp-for="Address1" class="form-control"></textarea>

                    <span asp-validation-for="DistributorAddress2" class="text-danger"></span>
                </div>*@
                <div id="rd-box">
                </div>

                <div id="st-box">

                    <label asp-for="DistributorVat" class="control-label" style="text-align: right;">VAT / GST / Tax No.</label>
                    <input asp-for="DistributorVat" class="form-control" style="padding: 5px;" />
                    <span asp-validation-for="DistributorVat" class="text-danger"></span>


                </div>
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
