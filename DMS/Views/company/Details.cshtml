@model DMS.Models.brandviewmodel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<head>
    <link rel="stylesheet" href="~/css/css/StyleSheet1.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<div style="margin-left:250px;margin-top:60px">
    <h3 style="margin-left:30px"> Company Details </h3>
    <a asp-action="Index" style="display:flex;float:right;margin-right:40px" class="btn btn-secondary btn-sm"><i class="fa fa-arrow-left"></i> Back</a>
    @*<a asp-action="Edit" asp-route-id="@Model.BrandId" class="btn btn-primary" style="display:flex;float:right">Edit</a>*@
</div>
<div style="margin-left:250px;margin-top:50px">
    
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card" style="margin-left: 20px; margin-right: 20px; width:1200px">
                    <div class="card-body">
                        <div class="container">
                            <div class="box">
                                <label asp-for="BrandName" class="label-style"></label>
                                <input asp-for="BrandName" class="form-control input-style" readonly />
                            </div>

                            <div class="box">

                                <label asp-for="BrandType" class="label-style"></label>
                                <input asp-for="BrandType" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="Country" class="label-style"></label>
                                <input asp-for="Country" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="State" class="label-style"></label>
                                <input asp-for="State" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="City" class="label-style"></label>
                                <input asp-for="City" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="Zipcode" class="label-style"></label>
                                <input asp-for="Zipcode" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="Address1" class="label-style"></label>
                                <input asp-for="Address1" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="Address2" class="label-style"></label>
                                <input asp-for="Address2" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="Province" class="label-style"></label>
                                <input asp-for="Province" class="form-control input-style" readonly />
                            </div>

                            <div class="box">
                                <label asp-for="Logo" class="label-style"></label>
                                <input asp-for="Logo" class="form-control input-style" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<table id="file-table" class="table" style="background-color:white;margin-left:30px;width:1200px">
    <thead>
        <tr>
            <th>File Name</th>
            <th>File Type</th>
            @*<th>Actions</th>*@
        </tr>
    </thead>
    <tbody>
        @if (Model.Files != null && Model.Files.Count > 0)
        {
            foreach (var file in Model.Files)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>@file.FileType</td>
                    @*<td>
                        <a href="@file.File" target="_blank">Download</a>

                    </td>*@
                </tr>
            }
        }
    </tbody>
</table>
</div>