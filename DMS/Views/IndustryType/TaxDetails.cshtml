@model DMS.Models.Countries

@{
    ViewData["Title"] = "TaxDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div style="text-align:center;width:1000px">
        <center>
            <h1>View Tax Rate</h1>
        </center>
    </div>
    <head>
        <link rel="stylesheet" href="~/css/css/StyleSheet1.css" />
        <style>
            td {
                width: 200px;
                padding: 50px;
            }
        </style>
    </head>
<div style="margin-left:60%;" class="d-flex justify-content-end">
    <div class="row">
        <a asp-action="tax" class="btn btn-secondary btn-sm" style="display:flex;float:right"> Back</a>
    </div>
    <div class="row">
        <a asp-action="TaxEdit" asp-route-id="@Model.Id" class="btn btn-primary" style="text-align:center; border:none">Edit</a>
    </div>
</div>
    <br />
    <br />
    <div class="container-fluid" style="background-color:snow;">
        <div class="row">
            <form asp-action="TaxEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <table>
                    <tr>
                        <td style="height:auto">
                            <div class="col-lg-12">
                                <div class="box">
                                    <label asp-for="Name" class="control-label">Country</label>
                                    @Html.DropDownList("Country", ViewData["Country"] as SelectList, new { @class = "form-control custom-width custom-textbox", @id = "country_id" })
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="col-lg-12">
                                <div class="box">
                                    <label asp-for="TaxPerc" class="control-label">Percentage</label>
                                    <input asp-for="TaxPerc" class="form-control" readonly />
                                    <span asp-validation-for="TaxPerc" class="text-danger"></span>
                                </div>
                            </div>
                        </td>
                        @*<td>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </td>*@
                    </tr>
                </table>
            </form>
        </div>
    </div>
