<div class="" container-fluid" style="background-color:snow;">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <table>
            <tr>
                <td>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"style="width:250px"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </td>
                <td style="width:300px">
                    <div class="form-group">
                        <div>
                            <label asp-for="Status" class="control-label"></label>
                        </div>
                        <div class="row" style="display:flex;gap:20px">

                            @if (Model.Status == 0)
                             {
                                <label class="kt-radio kt-radio--bold kt-radio--success">
                                    <input type="radio" name="status" value="0" checked> Inactive
                                </label>
                                <label class="kt-radio kt-radio--bold kt-radio--danger">
                                    <input type="radio" name="status" value="1"> Active
                                </label>
                             }
                            else
                            {
                                <label class="kt-radio kt-radio--bold kt-radio--success">
                                    <input type="radio" name="status" value="0"> Inactive
                                </label>
                                <label class="kt-radio kt-radio--bold kt-radio--danger">
                                    <input type="radio" name="status" value="1" checked> Active
                                </label>
                            }
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <input type="submit" value="UpdateIndustry" class="btn btn-primary" />
                    </div>
                </td>
            </tr>
        </table>
       
