@model DMS.Models.Countries
@{
    ViewData["Title"] = "taxCreate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/css/StyleSheet1.css" />
    <style>
        td {
            width: 200px;
            padding: 50px;
        }
    </style>
</head>
<br />
<div style="text-align:center;width:1000px">
    <center>
        <h1>Add New TaxRate</h1>
    </center>
</div>
<hr />
<div class="row">
    <a asp-action="tax" class="btn btn-secondary btn-sm" style="display:flex;float:right"> Back</a>
</div>
<div class="row small-gap">

    <div class="row">
        <div class="container-fluid" style="background-color:snow;">
            <form asp-action="taxCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <table>
                    <tr>
                        <td>
                            
                            <div class="col-lg-12">
                                <div class="box form">
                                    <label asp-for="Id" class="control-label">Country</label>
                                    @Html.DropDownList("Id", ViewData["Id"] as SelectList, new { @class = "form-control", @id = "country_id" })
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                </div>

                                @*<div class="box form">
            <label asp-for="Id" class="control-label">Country</label>
            @Html.DropDownList("Id", ViewData["Name"] as SelectList, new { @class = "form-control", @id = "country_id" })
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>*@
                            </div>
                        </td>
                        <td colspan="3">
                            <div class="col-lg-12">
                                <div class="box form">
                                    <label asp-for="TaxPerc" class="control-label">Percentage</label>
                                    <input asp-for="TaxPerc" class="form-control" />
                                    <span asp-validation-for="TaxPerc" class="text-danger"></span>
                                </div>
                          
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input asp-action="taxCreate" type="submit" value="taxCreate" class="btn btn-primary" />
                            </div>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
 </div>

