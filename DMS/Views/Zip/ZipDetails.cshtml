@model DMS.Models.Zip

@{
    ViewData["Title"] = "ZipDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center"> ZipDetails</h2>

<head>
    <link rel="stylesheet" href="~/css/css/StyleSheet1.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<div class="row" style="background-color:whitesmoke">
    <a asp-action="Index2" class="btn btn-secondary btn-sm" style="display:flex;float:right"><i class="fa fa-arrow-left"></i> Back</a>
    <a asp-action="ZipEdit" asp-route-id="@Model.Id" class="btn btn-primary" style="display:flex;float:right">Edit</a>
</div>
<div class="container-fluid">
    <div class="row" >
        @*<div class="col-lg-12">*@
            <div class="card" style="background-color:white" >
                <div class="card-body">
                    <div class="container">
                        <div class="box">
                            <label asp-for="Zipcode" class="label-style"></label>
                            <input asp-for="Zipcode" class="form-control input-style" readonly />
                        </div>
                        <div class="box">
                            <label asp-for="AreaName" class="label-style"></label>
                            <input asp-for="AreaName" class="form-control input-style" readonly />
                        </div>
                        <div class="box">
                            <label asp-for="City" class="label-style"></label>
                            <input asp-for="City" class="form-control input-style" readonly />
                        </div>
                        <div class="box">
                            <label asp-for="State" class="label-style"></label>
                            <input asp-for="State" class="form-control input-style" readonly />
                        </div>
                        <div class="box">
                            <label asp-for="Country" class="label-style"></label>
                            <input asp-for="Country" class="form-control input-style" readonly />
                        </div>
                        <div class="box">

                            <label asp-for="Division1" class="label-style"></label>
                            <input asp-for="Division1" class="form-control input-style" readonly />
                        </div>
                        <div class="box">
                            <label asp-for="Division2" class="label-style"></label>
                            <input asp-for="Division2" class="form-control input-style" readonly />
                        </div>
                    </div>
                </div>
            </div>
        @*</div>*@
    </div>
</div>
                   
