<div style="text-align:center;width:1200px">
    <center>
        <h1>Edit Product</h1>
    </center>
</div>

<a asp-action="Index" class="btn btn-secondary" style="display:flex; float:right;">← Back</a>
<hr />
<head>
    <link rel="stylesheet" href="~/css/css/StyleSheet1.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<div class="row small-gap">
    <div class="row">

        <div class="col-lg-12">
            <form asp-action="Edit" asp-route-id="@Model.ProductId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card" style="margin-left: 20px; margin-right: 20px;">
                    <div class="card-body">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="container">

                            <div class="box">
                                <label asp-for="Brand" class="control-label"></label>
                                <input asp-for="Brand" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                            <div class="box">
                                <label asp-for="ProductCode" class="control-label">ProductCode</label>
                                <input asp-for="ProductCode" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="ProductCode" class="text-danger"></span>
                            </div>

                            <div class="box">
                                <label asp-for="ProductName" class="control-label">ProductName</label>
                                <input asp-for="ProductName" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="box">
                                <label asp-for="ProductPrice" class="control-label">Product Price</label>
                                <input asp-for="ProductPrice" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>

                            </div>


                            <div class="box">
                                <label asp-for="Variant" class="control-label">Variant</label>
                                <input asp-for="Variant" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="Variant" class="text-danger"></span>
                            </div>
                            <div class="box">
                                <label asp-for="FromNode" class="control-label">From Qty</label>
                                <input asp-for="FromNode" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="FromNode" class="text-danger"></span>

                            </div>

                            <div class="box">
                                <label asp-for="ToNode" class="control-label">To Qty</label>
                                <input asp-for="ToNode" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="ToNode" class="text-danger"></span>
                            </div>
                            <div class="box">
                                <label asp-for="ProductDesc" class="control-label">Description</label>
                                <input asp-for="ProductDesc" class="form-control input-style" style="height:auto;" />
                                <span asp-validation-for="ProductDesc" class="text-danger"></span>

                            </div>


                            <div class="box">
                                <label asp-for="ProductImg" class="control-label">Logo</label>
                                <input asp-for="ProductImg" type="file" class="form-control-file" />
                                <span asp-validation-for="ProductImg" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-group">

                            <div class="input-group">

                                <div class="input-group-append">
                                    <br />



                                    <div class="col-md-4 d-flex justify-content-between py-3 px-1 align-items-center">
                                        <h2 align="left" style="margin-left:20px">Marketing Documents</h2>
                                        <center> <button type="button" class="btn btn-primary" id="add-file-btn">Add File</button></center>
                                    </div>

                                    <div id="file-upload-container">
                                        <div class="form-group" id="file-upload-fields" style="display:none;">
                                            <div class="container">
                                                <div class="box">
                                                    <label for="FileName">File Name</label>
                                                    <input type="text" class="" id="FileName" name="FileName">
                                                </div>
                                                <div class="box">
                                                    <label for="FileType">File Type</label>
                                                    <select class=" " id="FileType" name="FileType">
                                                        <option value="pdf">PDF</option>
                                                        <option value="doc">Microsoft Word</option>
                                                        <option value="docx">Microsoft Word (docx)</option>
                                                        <option value="txt">Text File</option>
                                                        <option value="jpg">JPEG Image</option>
                                                        <option value="png">PNG Image</option>
                                                    </select>
                                                </div>
                                                <div class="box">
                                                    <label for="File">Files</label>

                                                    <input type="file" id="files" name="Files" multiple>


                                                </div>

                                                <div class="col-1" style="margin-top:23px;">
                                                    <button type="button" class="btn btn-danger delete-file-btn">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </div>

                                            </div>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a asp-action="Index" class="btn btn-secondary" style="display:flex; float:right;">Cancel</a>
                        <input type="submit" value="Update" class="btn btn-primary" style="display:flex;float:right" />
            </form>
        </div>
    </div>

</div>
<br /><br />
