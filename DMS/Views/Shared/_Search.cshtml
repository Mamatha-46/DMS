@model IEnumerable<DMS.Models.Zip>



<head>
    <link rel="stylesheet" href="~/css/css/table.css" />
</head>
<table class="table" style="width:1200px;margin-left:20px;text-align:center">
    <thead>
        <tr>
            <th style="width: 200px; height: 25px; text-align: center">
                @Html.DisplayNameFor(model => model.AreaName)
            </th>
            <th style="width: 200px; text-align: center">
                @Html.DisplayNameFor(model => model.Country)
            </th>

            <th style="width: 200px; text-align: center">
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th style="width: 200px; text-align: center">
                @Html.DisplayNameFor(model => model.City)
            </th>

            <th style="width: 200px; text-align: center">
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>

            <th style="width: 200px; text-align: center">
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="height:25px">
                    @Html.DisplayFor(modelItem => item.AreaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zipcode)
                </td>
                <td>
                    <a href="@Url.Action("ZipDetails", "Zip", new { id = item.Id })"><i class="fa fa-pen"></i>view</a>
                </td>
            </tr>
         }
    </tbody>
</table>
